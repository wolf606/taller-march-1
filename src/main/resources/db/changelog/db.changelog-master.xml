<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.8.xsd">

    <changeSet id="1" author="wolf606" runOnChange="false">
        <createTable tableName="users">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="varchar(100)">
                <constraints unique="true" nullable="false"/>
            </column>
            <column name="password" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="role" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="2" author="wolf606" runOnChange="false" runAlways="false">
        <insert tableName="users">
            <column name="name" value="Alice Johnson"/>
            <column name="email" value="alice@example.com"/>
            <column name="password" value="hashedpassword1"/>
            <column name="role" value="ADMIN"/>
        </insert>

        <insert tableName="users">
            <column name="name" value="Bob Smith"/>
            <column name="email" value="bob@example.com"/>
            <column name="password" value="hashedpassword2"/>
            <column name="role" value="USER"/>
        </insert>

        <insert tableName="users">
            <column name="name" value="Charlie Brown"/>
            <column name="email" value="charlie@example.com"/>
            <column name="password" value="hashedpassword3"/>
            <column name="role" value="USER"/>
        </insert>
    </changeSet>

</databaseChangeLog>
